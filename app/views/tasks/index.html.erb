<h1>Listing tasks</h1>

<div class="row-fluid">
<div id ="action-box" class="span12">
    
    <div class="action-create pull-right">
        <%= link_to 'New Task', new_task_path, :class => 'btn btn-primary'  %>
    </div>

</div>
</div>

<div class="row-fluid">
    <div class="span12">

<table width="100%">
  <tr>
    <th>Name</th>
    <th>Points</th>
    <th>Interval</th>
    <th>Category</th>
    <th>Age limit</th>
    <th>Is active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
    
  <tr class="
        <% if @tasks.index(task).odd? %> 
            dark
        <% end %>
    ">
    <td><%= task.name %></td>
    <td><%= task.points %></td>
    <td><%= task.interval %></td>
    <td><%= task.category %></td>
    <td><%= task.age_limit %></td>
    <td><%= task.is_active %></td>
    <td><%= link_to 'View', task, :class => 'btn btn-small' %></td>
    <td><%= link_to 'Edit', edit_task_path(task) , :class => 'btn btn-small' %></td>
    <td><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger'  %></td>
  </tr>
<% end %>
</table>
</div>
</div>


