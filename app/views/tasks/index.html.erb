<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Points</th>
    <th>Interval</th>
    <th>Category</th>
    <th>Age limit</th>
    <th>Is active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.points %></td>
    <td><%= task.interval %></td>
    <td><%= task.category %></td>
    <td><%= task.age_limit %></td>
    <td><%= task.is_active %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

