 <h3>Login to The Chore Board</h3>




<%= form_tag process_login_path do |f| %>

 <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Login", :class => "btn btn-primary action-button" %>
  </div>


<% end %>
