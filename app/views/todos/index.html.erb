<h1>Listing todos</h1>

<table>
  <tr>
    <th>Member</th>
    <th>Task</th>
    <th>Year</th>
    <th>Month</th>
    <th>Week</th>
    <th>Day</th>
    <th>Family</th>
    <th>Is completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.member %></td>
    <td><%= todo.task %></td>
    <td><%= todo.year %></td>
    <td><%= todo.month %></td>
    <td><%= todo.week %></td>
    <td><%= todo.day %></td>
    <td><%= todo.family %></td>
    <td><%= todo.is_completed %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

